	// }
	"Add Shebang": {
		"scope": "sh",
		"prefix": "shebang",
		"body": [
			"#!/bin/bash",
		],
		"description": "Adds Shebang Script Head"
	}

	"Add Case Statement": {
		"scope": "sh",
		"prefix": "case",
		"body": [
			"case $var in",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"{testitems} )",
					"# code if match",
					";;",
				"*) # default case",
					"# code if default case",
					";;",
			"esac",
		],
		"description": "Adds Case Statement Structure"
	}

	"User Prompt": {
		"scope": "sh",
		"prefix": "promptuser",
		"body": [
			"read -p 'Prompt Text Here' var",
		],
		"description": "Adds User Prompt"
	}

	"Add And-Or Triple Test": {
		"scope": "sh",
		"prefix": "andortriple",
		"body": [
			"if [[ {andtest} ]] && ( [[ {oroption1} ]] || [[ {proption1} ]] ); then",
				"# code if true",
			"else",
				"# code if false",
			"fi",
		],
		"description": "Adds IF-ELSE test with one AND and two OR options"
	}

	"Add Colours": {
		"scope": "sh",
		"prefix": "colours",
		"body": [
			"RED=$'\e[1;31m'"
			"GREEN=$'\e[1;32m'"
			"NC=$'\e[1;0m'"
			"BLUE=$'\e[1;34m'"
			"BLACK=$'\e[1;30m'"
			"YELLOW=$'\e[1;33m'"
			"PURPLE=$'\e[1;35m'"
			"CYAN=$'\e[1;36m'"
			"GREY=$'\e[1;37m'"
		],
		"description": "Insert colour codes"
	}

